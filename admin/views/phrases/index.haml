.block
  .secondary-navigation
    %ul.wat-cf
      %li.first.active=link_to pat(:list), url(:phrases, :index)
      %li=link_to pat(:new), url(:phrases, :new)
  .content
    %h2.title
      =pat(:all)
      =mt(:phrases)
    .inner
      %table.table
        %tr
          %th.first=mat(:phrase, :id)
          %th=mat(:phrase, :content)
          %th.last="&nbsp;"
        -@phrases.each do |phrase|
          %tr
            %td.first=phrase.id
            %td=phrase.content
            %td.last
              =button_to pat(:edit), url(:phrases, :edit, :id => phrase.id), :method => :get, :class => :button_to
              ="|"
              =button_to pat(:delete), url(:phrases, :destroy, :id => phrase.id), :method => :delete, :class => :button_to, :onsubmit => "return confirm('#{pat(:confirm)}')"
      .actions-bar.wat-cf
        .actions="&nbsp;"

-content_for :sidebar, partial("base/sidebar")
