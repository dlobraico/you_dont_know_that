.block
  .secondary-navigation
    %ul.wat-cf
      %li.first=link_to pat(:list), url(:phrases, :index)
      %li=link_to pat(:new), url(:phrases, :new)
      %li.active=link_to pat(:edit), url(:phrases, :edit, :id => @phrase.id)
  .content
    %h2.title
      =pat(:edit)
      =mt(:phrase)
    .inner
      -form_for :phrase, url(:phrases, :update, :id => @phrase.id), :method => :put, :class => :form do |f|
        =partial "phrases/form", :locals => { :f => f }

-content_for :sidebar, partial("base/sidebar")
